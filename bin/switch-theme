#!/bin/zsh

if [[ $# -ne 1 ]]; then
   print "one argument please" >&2
   exit 1
fi

if [ $1 = 'light' ]; then
  old='moon'
  new='dawn'
elif [ $1 = 'dark' ]; then
  old='dawn'
  new='moon'
else
  print "must be either light or dark" >&2
  exit 1
fi

sed -i '' "s/rose_pine_$old/rose_pine_$new/" ~/.config/helix/config.toml
for pid in `pgrep hx`; do kill -USR1 $pid; done
